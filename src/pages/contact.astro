---
import Layout from '../layouts/Page.astro';
import { Container } from '@components/odyssey-theme';

const seo = {
        title: 'DS | Contact',
        description:
                'The quickest ways to connect with Duke Saputra across phone, email, LinkedIn, and calendar booking.',
};
---

<Layout seo={seo}>
        <Container>
                <section class="contact-card" aria-labelledby="contact-card-heading">
                        <div class="contact-card__shell">
                                <header class="contact-card__header">
                                        <h1 id="contact-card-heading">Duke Saputra</h1>
                                        <a
                                                class="contact-card__cta"
                                                href="/assets/DS%20Contact%20Card.vcf"
                                                download="Duke Saputra.vcf"
                                        >
                                                Add to Contacts
                                        </a>
                                </header>

                                <div class="contact-card__sections">
                                        <section class="contact-card__section">
                                                <h2 class="contact-card__section-title">Links</h2>
                                                <ul class="contact-card__items" role="list">
                                                        <li>
                                                                <a
                                                                        class="contact-card__item"
                                                                        href="https://wa.me/qr/EYDEYNUZSEK4B1"
                                                                        target="_blank"
                                                                        rel="noreferrer"
                                                                >
                                                                        <span class="contact-card__item-label">WhatsApp</span>
                                                                        <span class="contact-card__item-value">Message</span>
                                                                </a>
                                                        </li>
                                                        <li>
                                                                <a
                                                                        class="contact-card__item"
                                                                        href="https://fantastical.app/DukeSaputra/gm"
                                                                        target="_blank"
                                                                        rel="noreferrer"
                                                                >
                                                                        <span class="contact-card__item-label">Fantastical</span>
                                                                        <span class="contact-card__item-value">Book Time</span>
                                                                </a>
                                                        </li>
                                                        <li>
                                                                <a
                                                                        class="contact-card__item"
                                                                        data-linkedin
                                                                        href="https://linkedin.com/in/dukedj"
                                                                        target="_blank"
                                                                        rel="noreferrer"
                                                                >
                                                                        <span class="contact-card__item-label">LinkedIn</span>
                                                                        <span class="contact-card__item-value">linkedin.com/in/dukedj</span>
                                                                </a>
                                                        </li>
                                                </ul>
                                        </section>
                                        <section class="contact-card__section">
                                                <h2 class="contact-card__section-title">Emails</h2>
                                                <ul class="contact-card__items" role="list">
                                                        <li>
                                                                <a class="contact-card__item" href="mailto:duke@saputra.co.uk">
                                                                        <span class="contact-card__item-label">Primary Email</span>
                                                                        <span class="contact-card__item-value">duke@saputra.co.uk</span>
                                                                </a>
                                                        </li>
                                                        <li>
                                                                <a class="contact-card__item" href="mailto:ventures@saputra.co.uk">
                                                                        <span class="contact-card__item-label">Ventures Email</span>
                                                                        <span class="contact-card__item-value">ventures@saputra.co.uk</span>
                                                                </a>
                                                        </li>
                                                        <li>
                                                                <a
                                                                        class="contact-card__item"
                                                                        href="mailto:duke.saputra@warwick.ac.uk"
                                                                >
                                                                        <span class="contact-card__item-label">University Email</span>
                                                                        <span class="contact-card__item-value">duke.saputra@warwick.ac.uk</span>
                                                                </a>
                                                        </li>
                                                </ul>
                                        </section>
                                        <section class="contact-card__section">
                                                <h2 class="contact-card__section-title">Others</h2>
                                                <ul class="contact-card__items" role="list">
                                                        <li>
                                                                <a class="contact-card__item" href="tel:+447985667166">
                                                                        <span class="contact-card__item-label">Phone Number</span>
                                                                        <span class="contact-card__item-value">+44 7985 667 166</span>
                                                                </a>
                                                        </li>
                                                        <li>
                                                                <a
                                                                        class="contact-card__item"
                                                                        href="https://maps.app.goo.gl/B9Z3rFS8ZnbiuYgs8"
                                                                        target="_blank"
                                                                        rel="noreferrer"
                                                                >
                                                                        <span class="contact-card__item-label">Location</span>
                                                                        <span
                                                                                class="contact-card__item-value"
                                                                                role="group"
                                                                                aria-label="Warwick Business School address"
                                                                        >
                                                                                <span>Warwick Business School</span>
                                                                                <span>Gibbet Hill Road</span>
                                                                                <span>Coventry</span>
                                                                                <span>CV4 7AL</span>
                                                                                <span>United Kingdom</span>
                                                                        </span>
                                                                </a>
                                                        </li>
                                                </ul>
                                        </section>
                                </div>

                        </div>
                </section>
        </Container>
</Layout>

<style>
        .contact-card {
                margin: var(--section-margin) auto clamp(3rem, 10vw, 6rem);
        }
        .contact-card__shell {
                position: relative;
                display: grid;
                gap: clamp(2.5rem, 5vw, 3.5rem);
        }
        .contact-card__header {
                position: relative;
                display: grid;
                justify-items: center;
                gap: 1.5rem;
                text-align: center;
                z-index: 1;
        }
        .contact-card__header h1 {
                margin: 0;
                font-size: clamp(2.2rem, 4vw, 3rem);
                color: var(--theme-on-bg);
        }
        .contact-card__cta {
                display: inline-flex;
                align-items: center;
                justify-content: center;
                padding: 0.36rem 0.92rem;
                border-radius: var(--theme-button-border-radius);
                background-color: var(--theme-primary);
                color: var(--theme-on-primary);
                font-weight: 500;
                text-decoration: none;
                transition: background-color var(--theme-transition, 180ms ease);
        }
        .contact-card__cta:hover,
        .contact-card__cta:focus-visible {
                background-color: var(--theme-primary-hover);
        }
        .contact-card__sections {
                display: grid;
                gap: clamp(2.25rem, 5vw, 3rem);
        }
        .contact-card__section {
                display: grid;
                gap: 1.25rem;
        }
        .contact-card__section-title {
                margin: 0;
                font-size: clamp(1.35rem, 3vw, 1.7rem);
                color: var(--theme-on-bg);
        }
        .contact-card__items {
                position: relative;
                z-index: 1;
                margin: 0;
                padding: 0;
                list-style: none;
                display: grid;
                gap: clamp(1rem, 2.5vw, 1.5rem);
                grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        }
        .contact-card__item {
                position: relative;
                display: flex;
                flex-direction: column;
                gap: 0.45rem;
                padding: 1.15rem 1.35rem;
                border-radius: calc(var(--theme-shape-radius) * 0.75);
                text-decoration: none;
                color: var(--theme-on-bg);
                background: color-mix(in srgb, var(--theme-surface-1) 92%, transparent);
                border: 1px solid color-mix(in srgb, var(--theme-on-bg) 10%, transparent);
                box-shadow: inset 0 1px 0 color-mix(in srgb, var(--theme-on-bg) 6%, transparent);
                transition: transform 180ms ease, border-color 180ms ease, background 180ms ease, box-shadow 180ms ease;
        }
        .contact-card__item:hover,
        .contact-card__item:focus-visible {
                transform: translateY(-3px);
                border-color: color-mix(in srgb, var(--theme-primary) 32%, transparent);
                background: color-mix(in srgb, var(--theme-surface-1) 98%, transparent);
                box-shadow: 0 18px 30px rgba(15, 23, 42, 0.14);
        }
        .contact-card__item-label {
                font-size: 0.8rem;
                letter-spacing: 0.08em;
                text-transform: uppercase;
                color: color-mix(in srgb, var(--theme-on-bg) 58%, transparent);
        }
        .contact-card__item-value {
                font-size: 1.1rem;
                font-weight: 600;
                line-height: 1.4;
                color: color-mix(in srgb, var(--theme-on-bg) 90%, transparent);
                display: grid;
                gap: 0.15rem;
                overflow-wrap: anywhere;
        }
        .contact-card__item-value span {
                display: block;
        }
        :global(html[data-theme='light'] .contact-card__item) {
                background: color-mix(in srgb, #fff 95%, transparent);
                border-color: color-mix(in srgb, var(--theme-on-bg) 8%, transparent);
        }
        @media (max-width: 520px) {
                .contact-card__items {
                        grid-template-columns: 1fr;
                }
        }
        @media (prefers-reduced-motion: reduce) {
                *,
                *::before,
                *::after {
                        animation-duration: 0.01ms !important;
                        animation-iteration-count: 1 !important;
                        transition-duration: 0.01ms !important;
                        scroll-behavior: auto !important;
                }
        }
</style>

<script>
        const deepLinkButton = document.querySelector('[data-linkedin]');
        if (deepLinkButton) {
                const userAgent = navigator.userAgent.toLowerCase();
                if (/iphone|ipad|ipod/.test(userAgent)) {
                        deepLinkButton.href = 'linkedin://in/dukedj';
                } else if (/android/.test(userAgent)) {
                        deepLinkButton.href = 'intent://in/dukedj#Intent;package=com.linkedin.android;scheme=https;end';
                }
        }
</script>
