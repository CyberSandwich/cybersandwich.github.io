---
import { Button, TextSection } from '@components/odyssey-theme';
import Layout from '../layouts/Page.astro';
import HeroSection from '../components/sections/heros/HeroSection.astro';

const seo = {
        title: 'DS | About',
        description: 'Duke Saputra — experience, education, and interests.',
};
---

<Layout {seo}>
        <div class="about-hero">
                <HeroSection>
                        <div slot="text-container" class="about-hero__intro">
                                <div class="about-hero__text">
                                        <h1>Duke Saputra</h1>
                                        <div class="about-hero__cta hero-section__cta">
                                                <Button href="/contact">Contact</Button>
                                        </div>
                                </div>
                        </div>
                </HeroSection>
        </div>
        <TextSection narrow>
                <section class="cv-section">
                        <h2>Education &amp; Qualifications</h2>
                        <div class="cv-list">
                                <article class="cv-item">
                                        <header class="cv-item__header">
                                                <h3>Warwick Business School, The University of Warwick</h3>
                                                <p class="cv-item__role">BSc (Hons) Management with Entrepreneurship (with Placement Year)</p>
                                                <div class="cv-item__meta">
                                                        <span>Coventry, United Kingdom</span>
                                                        <span>September 2022 – July 2026</span>
                                                </div>
                                        </header>
                                        <ul class="cv-item__bullets">
                                                <li>Grade: Year 1 (79%, 1st), Year 2 (78%, 1st), Year 3 (86%, 1st)</li>
                                                <li>Modules: Venture Capital, Financial Reporting 1 &amp; 2, Financial Management, Data Analysis, Design Thinking, Strategy</li>
                                                <li>Achievements: Highest course mark in Years 2 and 3 out of 280 students</li>
                                        </ul>
                                </article>
                                <article class="cv-item">
                                        <header class="cv-item__header">
                                                <h3>Sekolah Global Indo-Asia Batam, Indonesia</h3>
                                                <p class="cv-item__role">International Baccalaureate Diploma Programme (IBDP)</p>
                                                <div class="cv-item__meta">
                                                        <span>Batam, Indonesia</span>
                                                        <span>July 2020 – June 2022</span>
                                                </div>
                                        </header>
                                        <ul class="cv-item__bullets">
                                                <li>Grade: 42/45; Business Management HL (7/7), Economics HL (7/7), English A Language &amp; Literature SL (7/7)</li>
                                                <li>Achievement: Ranked 2nd in the cohort (top 8% globally)</li>
                                        </ul>
                                </article>
                                <article class="cv-item">
                                        <header class="cv-item__header">
                                                <h3>Sekolah Global Indo-Asia Batam, Indonesia</h3>
                                                <p class="cv-item__role">IGCSE</p>
                                                <div class="cv-item__meta">
                                                        <span>Batam, Indonesia</span>
                                                        <span>July 2018 – June 2020</span>
                                                </div>
                                        </header>
                                        <p class="cv-item__summary">A*A*A*A*A*A*A; ICE award with Distinction; ranked 1st in the cohort</p>
                                </article>
                        </div>
                </section>

                <section class="cv-section">
                        <h2>Work &amp; Leadership Experience</h2>
                        <div class="cv-list">
                                <article class="cv-item">
                                        <header class="cv-item__header">
                                                <h3>Microsoft</h3>
                                                <p class="cv-item__role">Enterprise Account Manager, Financial Services</p>
                                                <div class="cv-item__meta">
                                                        <span>London, United Kingdom</span>
                                                        <span>July 2024 – June 2025</span>
                                                </div>
                                        </header>
                                        <ul class="cv-item__bullets">
                                                <li>Orchestrated innovation events and summits for Lloyds Bank and Aviva, creating £51m+ in net new recurring revenue</li>
                                                <li>Spearheaded the UK subsidiary’s largest end-user AI training, reaching 11,800 users with an NPS score of +80</li>
                                                <li>Optimized divisional scrum calls, automating report preparation, and increasing pipeline closure velocity by 30%</li>
                                                <li>Headed security AI and Purview at Lloyds Bank, driving +50% MoM adoption of Security Copilot while halving cases</li>
                                                <li>Championed intern development by orchestrating learning sessions that enhanced role proficiency and career growth</li>
                                                <li>Received the Early in Career Award for driving material business success (from 200+ graduates/apprentices/interns)</li>
                                        </ul>
                                </article>
                                <article class="cv-item">
                                        <header class="cv-item__header">
                                                <h3>Warwick Finance Society</h3>
                                                <p class="cv-item__role">Head of Tour</p>
                                                <div class="cv-item__meta">
                                                        <span>Coventry, United Kingdom</span>
                                                        <span>May 2023 – April 2024</span>
                                                </div>
                                        </header>
                                        <ul class="cv-item__bullets">
                                                <li>Directed a 5-day participant-centric Portugal tour for Warwick’s largest society with 100% positive feedback</li>
                                                <li>Managed complex logistics by analyzing diverse requirements, developing data-driven plans for seamless execution</li>
                                                <li>Identified cost-saving opportunities, driving optimizations that reduced expenses and achieved £2000+ net profit</li>
                                        </ul>
                                </article>
                                <article class="cv-item">
                                        <header class="cv-item__header">
                                                <h3>Warwick Esports Society</h3>
                                                <p class="cv-item__role">Lead Data Analyst</p>
                                                <div class="cv-item__meta">
                                                        <span>Coventry, United Kingdom</span>
                                                        <span>April 2023 – April 2024</span>
                                                </div>
                                        </header>
                                        <ul class="cv-item__bullets">
                                                <li>Pioneered monthly analytical reports covering 4500 members across 3 key platforms, enabling 40 executive decisions</li>
                                                <li>Optimized data reporting structures and implemented predictive models to deliver 80+ actionable suggestions</li>
                                                <li>Led an aggressive growth campaign, increasing membership by ~20% in 1 week and improving reach by 263%</li>
                                        </ul>
                                </article>
                                <article class="cv-item">
                                        <header class="cv-item__header">
                                                <h3>IBM</h3>
                                                <p class="cv-item__role">Summer Intern, Project Lead and Communications Manager</p>
                                                <div class="cv-item__meta">
                                                        <span>Winchester, United Kingdom</span>
                                                        <span>June 2023 – July 2023</span>
                                                </div>
                                        </header>
                                        <ul class="cv-item__bullets">
                                                <li>Collaborated with a 5-person task force to analyze 1400+ IBM SkillsBuild courses to align with university courses</li>
                                                <li>Applied Kaizen principles to optimize workflows, driving efficiencies in tailoring IBM offerings for 1000+ courses</li>
                                                <li>Generated scrum reports to track progress with 20+ actionable insights, improving output by 45% above targets</li>
                                        </ul>
                                </article>
                        </div>
                </section>

                <section class="cv-section">
                        <h2>Extra-Curricular Activities</h2>
                        <div class="cv-list">
                                <article class="cv-item">
                                        <header class="cv-item__header">
                                                <h3>menuva</h3>
                                                <p class="cv-item__role">Founder</p>
                                                <div class="cv-item__meta">
                                                        <span>Reading, United Kingdom</span>
                                                        <span>July 2025 – Present</span>
                                                </div>
                                        </header>
                                        <p class="cv-item__summary">Building a personalized menu platform to remove dietary guesswork and enable inclusive and accessible dining</p>
                                </article>
                                <article class="cv-item">
                                        <header class="cv-item__header">
                                                <h3>Sekolah Global Indo Asia’s HMCA/MUN Debate Club</h3>
                                                <p class="cv-item__role">Debate Club Captain</p>
                                                <div class="cv-item__meta">
                                                        <span>Batam, Indonesia</span>
                                                        <span>September 2020 – January 2021</span>
                                                </div>
                                        </header>
                                        <ul class="cv-item__bullets">
                                                <li>Led 15+ sessions to provide core lessons and organize mock debates, boosting procedural knowledge and confidence</li>
                                                <li>Coached participants by evaluating 40+ speeches, resulting in 6 awards from 4 committees (top school record to date)</li>
                                                <li>Drove the club’s expansion efforts, including logo design, talent scouting, and digital marketing, bringing 40% growth</li>
                                        </ul>
                                </article>
                        </div>
                </section>

                <section class="cv-section cv-section--split">
                        <div class="cv-column">
                                <h2>Skills</h2>
                                <ul class="cv-item__bullets cv-item__bullets--dense">
                                        <li>Languages: English (Native), Indonesian (Native)</li>
                                        <li>Technical Skills: Final Cut Pro X (Advanced), Pixelmator Pro/Photoshop (Intermediate)</li>
                                </ul>
                        </div>
                        <div class="cv-column">
                                <h2>Certifications &amp; Interests</h2>
                                <ul class="cv-item__bullets cv-item__bullets--dense">
                                        <li>Certifications: Prosci Change Management, IBM Ent. Design Thinking, Microsoft 900 (Azure, AI, Data, Security, M365)</li>
                                        <li>Awards: Winner of the 2023 Warwick Boba Awards in the “Most Likely to Turn Into a Tapioca Ball” category</li>
                                        <li>Interests: Bubble Tea, Dogs, Drone Photography, Technological Innovation</li>
                                </ul>
                        </div>
                </section>
        </TextSection>

        <style is:inline>
                :global(.about-hero .content__container) {
                        display: grid;
                        place-items: center;
                        min-height: calc(100vh - var(--navbar-height, 0px));
                        padding-block: clamp(3rem, 8vw, 6rem);
                }

                :global(.about-hero .hero-section__section) {
                        grid-template-columns: minmax(0, 1fr);
                        place-items: center;
                        margin: 0 auto;
                        width: min(100%, 640px);
                }

                .about-hero__intro {
                        display: flex;
                        justify-content: center;
                        width: 100%;
                }

                .about-hero__text {
                        display: grid;
                        justify-items: center;
                        text-align: center;
                        gap: clamp(0.65rem, 2vw, 1.1rem);
                        max-width: min(32rem, 100%);
                        margin: 0 auto;
                }

                :global(.about-hero .hero-section__text) {
                        display: grid;
                        justify-items: center;
                        text-align: center;
                        gap: clamp(0.9rem, 3vw, 1.35rem);
                        max-width: min(38rem, 100%);
                }

                :global(.about-hero .hero-section__text h1) {
                        font-size: clamp(2.75rem, 5vw, 4rem);
                        letter-spacing: -0.02em;
                        margin: 0;
                }

                :global(.about-hero .hero-section__cta) {
                        justify-content: center;
                        margin: 0;
                }

                :global(.about-hero .hero-section__image) {
                        display: none;
                }

                .cv-section {
                        display: grid;
                        gap: 1.75rem;
                        margin-bottom: clamp(2.5rem, 6vw, 4rem);
                }

                .cv-section h2 {
                        font-size: clamp(1.5rem, 3vw, 2rem);
                        margin: 0;
                        color: var(--theme-on-bg);
                }

                .cv-list {
                        display: grid;
                        gap: 2rem;
                }

                .cv-item {
                        position: relative;
                        background: color-mix(in srgb, var(--theme-surface-1) 94%, transparent);
                        border-radius: calc(var(--theme-shape-radius) * 1.6);
                        padding: clamp(1.65rem, 3vw, 2.25rem);
                        border: 1px solid color-mix(in srgb, var(--theme-border-color) 80%, transparent);
                        box-shadow: var(--theme-card-shadow, 0 18px 44px rgba(15, 23, 42, 0.08));
                        display: grid;
                        gap: 1.25rem;
                        overflow: hidden;
                }

                .cv-item__header {
                        display: grid;
                        gap: 0.45rem;
                        position: relative;
                        z-index: 1;
                }

                .cv-item__header h3 {
                        margin: 0;
                        font-size: clamp(1.1rem, 2.5vw, 1.45rem);
                }

                .cv-item__role {
                        margin: 0;
                        font-weight: 600;
                        color: color-mix(in srgb, var(--theme-on-bg) 82%, transparent);
                }

                .cv-item__meta {
                        display: flex;
                        flex-direction: column;
                        gap: 0.25rem;
                        font-size: 0.95rem;
                        color: color-mix(in srgb, var(--theme-on-bg) 70%, transparent);
                        font-feature-settings: 'tnum' 1;
                }

                .cv-item__bullets {
                        margin: 0;
                        padding-left: 1.1rem;
                        display: grid;
                        gap: 0.65rem;
                        font-size: 0.975rem;
                        line-height: 1.65;
                        color: color-mix(in srgb, var(--theme-on-bg) 88%, transparent);
                }

                .cv-item__bullets li {
                        list-style: disc;
                }

                .cv-item__bullets--dense {
                        padding-left: 1rem;
                        gap: 0.5rem;
                }

                .cv-item__summary {
                        margin: 0;
                        font-size: 0.975rem;
                        line-height: 1.65;
                        color: color-mix(in srgb, var(--theme-on-bg) 88%, transparent);
                        position: relative;
                        padding-left: 0.2rem;
                }

                .cv-section--split {
                        display: grid;
                        gap: clamp(2rem, 4vw, 3rem);
                        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
                        align-items: start;
                }

                .cv-section--split .cv-column {
                        background: color-mix(in srgb, var(--theme-surface-1) 96%, transparent);
                        border-radius: calc(var(--theme-shape-radius) * 1.6);
                        padding: clamp(1.5rem, 3vw, 2rem);
                        box-shadow: var(--theme-card-shadow, 0 16px 40px rgba(15, 23, 42, 0.08));
                        border: 1px solid color-mix(in srgb, var(--theme-border-color) 80%, transparent);
                        display: grid;
                        gap: 1rem;
                }

                .cv-section--split .cv-column h2 {
                        margin: 0;
                }

                @media (max-width: 768px) {
                        :global(.about-hero .hero-section__section) {
                                padding-block: clamp(2.75rem, 12vw, 4.5rem);
                        }

                        .cv-item {
                                padding: clamp(1.4rem, 5vw, 1.75rem);
                        }

                        .cv-item__bullets {
                                padding-left: 1rem;
                        }
                }
        </style>
</Layout>
