---
import { Container } from '@components/odyssey-theme';

const hasImageSlot = Astro.slots.has('image-container');
const sectionClass = `hero-section__section${!hasImageSlot ? ' hero-section__section--single' : ''}`;
---

<Container>
        <section class={sectionClass}>
                <div class="hero-section__text">
                        <slot name="text-container"></slot>
                </div>
                {hasImageSlot && (
                        <div class="hero-section__image">
                                <slot name="image-container"></slot>
                        </div>
                )}
        </section>
</Container>

<style>
	.hero-section__section {
		margin: var(--section-margin) auto;
		min-height: clamp(90vh, 100vw, calc(100vh - var(--navbar-height)));
		display: grid;
		grid-template-columns: 1fr 1fr;
		align-items: center;
		gap: 1rem;
	}
	.hero-section__text {
		justify-self: center;
		max-width: 25rem;
	}
	.hero-btns__container {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	.hero-btns__container {
		margin-right: 1rem;
	}
	.hero-section__image {
		display: flex;
	}
        .hero-section__image :global(img) {
                width: 100%;
                height: 100%;
                max-height: 80vh;
                object-fit: cover;
                border-radius: var(--theme-shape-radius);
                box-shadow: var(--theme-image-shadow);
        }
        .hero-section__section--single {
                grid-template-columns: minmax(0, 1fr);
                justify-items: center;
                text-align: center;
        }
        .hero-section__section--single .hero-section__text {
                justify-self: center;
                text-align: center;
        }
        .hero-section__section--single .hero-section__cta {
                justify-content: center;
        }
        @media (max-width: 768px) {
                .hero-section__section {
                        margin: 2rem auto 0 auto;
                        grid-template-columns: 1fr;
                }
	}
</style>
