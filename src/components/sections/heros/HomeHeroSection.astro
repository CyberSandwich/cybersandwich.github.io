---
import { Button, Container } from '@components/odyssey-theme';
import settings from '../../../config/settings.js';
import { ThemeSwitcher } from '../../theme-switcher/theme-switcher';
---

<Container>
        <section class="hero-section__section">
                <div class="hero-section__text">
                        <h1>
                                Duke <span class="hero-section__name-accent">Saputra</span>
                        </h1>
                        <ul class="hero-section__highlights">
                                <li>Warwick | Microsoft | IBM</li>
                        </ul>
                        <div class="hero-section__cta">
                                <Button href="/company/contact">Contact</Button>
                        </div>
                        {settings.enableThemeSwitcher && (
                                <div class="hero-section__theme-switcher">
                                        <ThemeSwitcher client:only />
                                </div>
                        )}
                </div>
                <div class="hero-section__image">
                                <a
                                        href="https://www.linkedin.com/in/dukedj"
                                        class="hero-section__image-link"
                                        id="hero-image-link"
                                        target="_blank"
                                        rel="noopener noreferrer"
                                >
                                        <picture>
                                                <img
                                                        src="/assets/images/home/DS Headshot.jpeg"
                                                        alt="Portrait of Duke Saputra"
                                                        id="home-hero-image"
                                                />
                                        </picture>
                                </a>
                </div>
        </section>
</Container>

<script is:inline>
        if (typeof window !== 'undefined') {
                const heroImageLink = document.querySelector<HTMLAnchorElement>('#hero-image-link');
                if (heroImageLink) {
                        const fallbackUrl = 'https://www.linkedin.com/in/dukedj';
                        const iosDeepLink = 'linkedin://in/dukedj';
                        const androidIntent = 'intent://in/dukedj#Intent;package=com.linkedin.android;scheme=https;end';

                        heroImageLink.addEventListener('click', (event) => {
                                const userAgent = navigator.userAgent || navigator.vendor || '';
                                const isIOS = /iPhone|iPad|iPod/i.test(userAgent);
                                const isAndroid = /Android/i.test(userAgent);

                                if (isIOS || isAndroid) {
                                        event.preventDefault();

                                        const fallbackTimer = window.setTimeout(() => {
                                                window.location.href = fallbackUrl;
                                        }, 600);

                                        if (isIOS) {
                                                window.location.href = iosDeepLink;
                                        } else if (isAndroid) {
                                                window.location.href = androidIntent;
                                        }

                                        window.setTimeout(() => {
                                                window.clearTimeout(fallbackTimer);
                                        }, 1500);
                                }
                        });
                }
        }
</script>

<style>
	.hero-section__section {
		margin: var(--section-margin) auto;
		min-height: clamp(90vh, 100vw, calc(100vh - var(--navbar-height)));
		display: grid;
		grid-template-columns: 1fr 1fr;
		align-items: center;
		gap: 1rem;
	}
        .hero-section__text {
                justify-self: center;
                display: grid;
                max-width: min(32rem, 100%);
                justify-items: center;
                text-align: center;
                gap: 1rem;
        }
        .hero-section__text h1 {
                margin: 0;
        }
        .hero-section__name-accent {
                color: var(--theme-on-bg);
                opacity: 0.72;
        }
        .hero-section__highlights {
                margin: 0;
                margin-inline: auto;
                margin-bottom: 1.75rem;
                padding: 0;
                list-style: none;
                display: grid;
                justify-items: center;
                gap: 0.75rem;
                width: fit-content;
        }
        .hero-section__highlights li {
                font-size: var(--font-size-base);
                font-weight: 500;
                letter-spacing: 0.04em;
                color: var(--theme-on-bg);
                opacity: 0.72;
                white-space: nowrap;
                text-align: center;
        }
        .hero-section__cta {
                display: flex;
                justify-content: center;
                margin-top: 1.5rem;
        }
        .hero-section__image {
                display: flex;
                justify-content: center;
        }
        .hero-section__image-link {
                display: block;
                line-height: 0;
        }
        .hero-section__image img {
                width: 100%;
                height: 100%;
                max-height: 80vh;
                object-fit: cover;
                border-radius: var(--theme-shape-radius);
                box-shadow: var(--theme-image-shadow);
        }
        .hero-section__theme-switcher {
                display: flex;
                justify-content: center;
                margin-top: 0;
        }
        @media (max-width: 768px) {
                .hero-section__section {
                        grid-template-columns: 1fr;
                        gap: 2rem;
                }
                .hero-section__text {
                        justify-self: stretch;
                        justify-items: center;
                        text-align: center;
                        gap: 1rem;
                }
                .hero-section__image {
                        justify-content: center;
                        align-items: center;
                }
                .hero-section__image img {
                        max-width: min(22rem, 100%);
                        height: auto;
                }
        }
        @media (max-width: 600px) {
                .hero-section__section {
                        margin: calc(var(--section-margin) * 0.65) auto var(--section-margin);
                        gap: 2rem;
                }
                .hero-section__image {
                        order: -1;
                        justify-content: center;
                        align-items: center;
                }
                .hero-section__image img {
                        max-width: min(18rem, 75vw);
                        width: 100%;
                }
                .hero-section__highlights {
                        width: 100%;
                }
                .hero-section__highlights li {
                        white-space: normal;
                }
        }
</style>
