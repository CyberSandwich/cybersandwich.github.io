---
import { Container } from '@components/odyssey-theme';
import settings from '../../../config/settings.js';
import { ThemeSwitcher } from '../../theme-switcher/theme-switcher';
---

<Container>
	<section class="hero-section__section">
                <div class="hero-section__text">
                        <h1>
                                Duke <span class="hero-section__name-accent">Saputra</span>
                        </h1>
                        <ul class="hero-section__highlights">
                                <li>Warwick Business School | Ex-Microsoft | Ex-IBM</li>
                        </ul>
                        {settings.enableThemeSwitcher && <ThemeSwitcher client:only />}
                </div>
		<div class="hero-section__image">
				<picture>
					<img
						src="/assets/images/home/classic-hero.jpg"
						alt="Astro Odyssey"
						id="home-hero-image"
					/>
				</picture>
		</div>
	</section>
</Container>

<style>
	.hero-section__section {
		margin: var(--section-margin) auto;
		min-height: clamp(90vh, 100vw, calc(100vh - var(--navbar-height)));
		display: grid;
		grid-template-columns: 1fr 1fr;
		align-items: center;
		gap: 1rem;
	}
        .hero-section__text {
                justify-self: center;
                display: grid;
                max-width: min(32rem, 100%);
        }
        .hero-section__text h1 {
                margin-bottom: 1.5rem;
                width: fit-content;
        }
        .hero-section__name-accent {
                color: var(--theme-on-bg);
                opacity: 0.72;
        }
        .hero-section__highlights {
                margin: 0 0 4rem 0;
                padding: 1.5rem 0 0 0;
                list-style: none;
                display: block;
                border-top: 1px solid var(--hero-divider-color);
                width: fit-content;
        }
        .hero-section__highlights li {
                font-size: var(--font-size-sm);
                font-weight: 500;
                letter-spacing: 0.04em;
                color: var(--theme-on-bg);
                opacity: 0.72;
                white-space: nowrap;
        }
        .hero-section__image {
                display: flex;
        }
        .hero-section__image img {
                width: 100%;
                height: 100%;
                max-height: 80vh;
                object-fit: cover;
                border-radius: var(--theme-shape-radius);
                box-shadow: var(--theme-image-shadow);
        }
        @media (max-width: 768px) {
                .hero-section__section {
                        grid-template-columns: 1fr;
                }
                .hero-section__text {
                        justify-self: stretch;
                }
        }
        @media (max-width: 600px) {
                .hero-section__highlights {
                        width: 100%;
                }
                .hero-section__highlights li {
                        white-space: normal;
                }
        }
</style>
