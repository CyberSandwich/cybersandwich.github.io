---
import { Button, Container } from '@components/odyssey-theme';
import settings from '../../../config/settings.js';
import { ThemeSwitcher } from '../../theme-switcher/theme-switcher';
---

<Container>
        <section class="hero-section__section">
                <div class="hero-section__text">
                        <h1>
                                Duke <span class="hero-section__name-accent">Saputra</span>
                        </h1>
                        <ul class="hero-section__highlights">
                                <li>Warwick Business School | Microsoft | IBM</li>
                        </ul>
                        <div class="hero-section__cta">
                                <Button href="/company/contact">Contact</Button>
                        </div>
                </div>
                <div class="hero-section__image">
                                <picture>
                                        <img
                                                src="/assets/images/home/DS Headshot.jpeg"
                                                alt="Portrait of Duke Saputra"
                                                id="home-hero-image"
                                        />
                                </picture>
                </div>
        </section>
        {settings.enableThemeSwitcher && (
                <div class="hero-section__theme-switcher">
                        <ThemeSwitcher client:only />
                </div>
        )}
</Container>

<style>
	.hero-section__section {
		margin: var(--section-margin) auto;
		min-height: clamp(90vh, 100vw, calc(100vh - var(--navbar-height)));
		display: grid;
		grid-template-columns: 1fr 1fr;
		align-items: center;
		gap: 1rem;
	}
        .hero-section__text {
                justify-self: center;
                display: grid;
                max-width: min(32rem, 100%);
                justify-items: center;
                text-align: center;
                gap: 1.5rem;
        }
        .hero-section__text h1 {
                margin: 0;
        }
        .hero-section__name-accent {
                color: var(--theme-on-bg);
                opacity: 0.72;
        }
        .hero-section__highlights {
                margin: 0;
                margin-inline: auto;
                list-style: none;
                display: grid;
                justify-items: center;
                gap: 0.75rem;
                width: fit-content;
        }
        .hero-section__highlights li {
                font-size: var(--font-size-sm);
                font-weight: 500;
                letter-spacing: 0.04em;
                color: var(--theme-on-bg);
                opacity: 0.72;
                white-space: nowrap;
        }
        .hero-section__cta {
                display: flex;
                justify-content: center;
                margin-top: 1.25rem;
        }
        .hero-section__image {
                display: flex;
        }
        .hero-section__image img {
                width: 100%;
                height: 100%;
                max-height: 80vh;
                object-fit: cover;
                border-radius: var(--theme-shape-radius);
                box-shadow: var(--theme-image-shadow);
        }
        .hero-section__theme-switcher {
                margin-top: 2rem;
                display: flex;
                justify-content: center;
        }
        @media (max-width: 768px) {
                .hero-section__section {
                        grid-template-columns: 1fr;
                }
                .hero-section__text {
                        justify-self: stretch;
                }
        }
        @media (max-width: 600px) {
                .hero-section__highlights {
                        width: 100%;
                }
                .hero-section__highlights li {
                        white-space: normal;
                }
        }
</style>
