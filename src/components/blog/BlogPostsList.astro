---
import BlogPostPreview from './BlogPostPreview.astro';

const {posts} = Astro.props;
---

<ul class="blog-posts-list__list">
  {posts?.map((post) => {
    return (
      <BlogPostPreview post={post} />
    )
  })}
</ul>

<style>
.blog-posts-list__list {
  margin: 0;
  padding: 0;
  list-style: none;
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 2rem;
}

.blog-posts-list__list > :last-child:nth-child(2n + 1) {
  grid-column: 1 / -1;
  justify-self: center;
  max-width: min(100%, 28rem);
  width: 100%;
}

@media (max-width: 768px) {
  .blog-posts-list__list {
    grid-template-columns: 1fr;
  }

  .blog-posts-list__list > :last-child:nth-child(2n + 1) {
    grid-column: auto;
    max-width: none;
  }
}
</style>
